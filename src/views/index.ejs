<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
        crossorigin="anonymous">

    <!-- Font awesome -->
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
        integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

    <!-- CSS -->
    <link rel="stylesheet" href="/public/css/main.css">

    <!-- Navigartor Icon -->
    <link rel="shortcut icon" href="/public/image/message.png" type="image/png" />
    <title>
        <%= title %>
    </title>
</head>

<body>
    <nav class="navbar navbar-dark bg-info mb-5 position-fixed opa" id="nav-bar">
        <a class="pl-3 h1 text-light" href="/"><i class='fa fa-envelope pr-3'></i>Sender</a>
        <ul class="nav justify-content-end">
            <li>
                <a class="nav-link active text-light" href="#container-form"><i class='fa fa-home pr-2'></i>Home</a>
            </li>
            <li>
                <a class="nav-link active text-light" href="#Contacts"><i class='fa fa-address-book pr-2'></i>Contacts</a>
            </li>
        </ul>
    </nav>
    <div class="container mb-5" id="container-form">
        <div class="row" id="form_send">
            <div class="col-md-7 mt-5 ml-4 py-3 card">
                <form action="/send" method="POST">
                    <hgroup class="text-center">
                        <h3 class="card-title lead"><i class="fa fa-inbox pr-2"></i>Send email</h3>
                    </hgroup>
                    <div class="form-group" id="text_to">
                        <select class="form-control" name="Ml_to">
                            <% for(var i = 0 ; i < usr.length ; i++) { %>
                            <option>
                                <%= usr[i].Us_name%>
                            </option>
                            <% } %>
                        </select>
                    </div>
                    <div class="form-group" id="text_subject">
                        <input class="form-control" type="text" placeholder="Subject" name="Ml_subject" />
                    </div>
                    <div class="form-group" id="text_text">
                        <textarea class="form-control" name="Ml_text" placeholder="Message" cols="30" rows="2"></textarea>
                    </div>
                    <div id="button_send">
                        <button class="btn btn-primary" type="submit"><i class="fa fa-send pr-2"></i>Send</button>
                    </div>
                </form>
            </div>
            <div class="col-md-4 my-auto py-3 ml-5 card" id="form_contact">
                <form action="/add_contact" method="POST">
                    <hgroup class="text-center">
                        <h3 class="card-title lead"><i class='fa fa-user-o pr-2'></i>Add contact</h3>
                    </hgroup>
                    <div class="form-group" id="text_name">
                        <input class="form-control" required type="text" placeholder="Name" name="Us_name">
                    </div>
                    <div class="form-group" id="text_address">
                        <input class="form-control" required type="email" placeholder="Mail address" name="Us_address">
                    </div>
                    <div class="form-group" id="text_to">
                        <select class="form-control" name="Us_relationship">
                            <option>Family</option>
                            <option>Friend</option>
                            <option>Classmate</option>
                            <option>Bussiness</option>
                        </select>
                    </div>
                    <div id="button_add">
                        <button id = "button" class="btn btn-primary" type="submit"><i class="fa fa-plus pr-2"></i>Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <hr>
    <hgroup>
        <p class="h2 text-light text-center pb-3"><i class='fa fa-address-book pr-3'></i>Contacts</p>
    </hgroup>
    <div class="container-fluid mb-0" id="Contacts">
        <div class="row">
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th class="px-5 text-center col-2">ID</th>
                        <th class="px-5 text-center col-3">Name</th>
                        <th class="px-5 text-center col-3">Email address</th>
                        <th class="px-5 text-center col-3">Relationship</th>
                        <th class="px-5 text-center col-1"></th>
                    </tr>
                </thead>
                <% if(form_user) { %>

                <% include partials/lists/edit_list.html %>

                <% }else if(!form_user) { %>

                <% include partials/lists/view_list.html %>

                <% } %>
            </table>
        </div>
    </div>
    <footer class="bg-info text-center">
        <p class="h3 text-light pt-3 mr-2"><i class='fa fa-envelope pr-3'></i>Sender</p>
        <small class="text-center text-light pb-3">Created by Mois√©s Guevara &copy;</small>
    </footer>
</body>

</html>